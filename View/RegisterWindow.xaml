<Window x:Class="FitTrack.View.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitTrack.View"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="450" Width="800">
    <Grid>
 
        <StackPanel>
            
            <TextBox x:Name="tbUsername"      
                     Text="{Binding UsernameInput, UpdateSourceTrigger=PropertyChanged}"
                     TextAlignment="Center"
                     Foreground="Black"/>

            <TextBox x:Name="tbPassword"
                     Text="{Binding PasswordInput, UpdateSourceTrigger=PropertyChanged}"
                     TextAlignment="Center"
                     Foreground="Black"/>

            

            <Label Content="{Binding UsernameInput}"
                   Foreground="Black"
                   FontSize="20"
                   Height="40"/>

            <Label Content="{Binding PasswordInput}"
                   Foreground="Black"
                   FontSize="20"
                   Height="40"/>


            <Button Command="{Binding RegisterCommand}"
                    Content="Register"/>


            <!-- ComboBox för länder -->
            
        </StackPanel>
        
    </Grid>
</Window>
