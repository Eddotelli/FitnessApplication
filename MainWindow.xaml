<Window x:Class="FitTrack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitTrack"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <StackPanel>

            <TextBox Text="Username"
                     TextAlignment="Center"/>
                <!--Text="{Binding UsernameInputCommand.UsernameInput, UpdateSourceTrigger=PropertyChanged}"-->
                     

            <TextBox Text="Password"
                     TextAlignment="Center"/>
            <!--Text="{Binding PasswordInputCommand.PasswordInput, UpdateSourceTrigger=PropertyChanged}"
                     />-->

            <Button Command="{Binding SignInCommand}"
                    Content="Sign in"/>

            <Button Command="{Binding RegisterCommand}"
                    Content="Register"/>
            
        </StackPanel>

    </Grid>
</Window>
